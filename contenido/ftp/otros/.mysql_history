CREATE USER 'nagios'@'localhost' IDENTIFIED BY 'qwerty';
CREATE USER 'nagios'@'%' IDENTIFIED BY 'qwerty';
show databases;
GRANT SELECT ON information_schema.* TO 'nagios'@'localhost';
GRANT SELECT ON performance_schema.* TO 'nagios'@'localhost';
GRANT SELECT ON performance_schema.* TO 'nagios'@'%';
